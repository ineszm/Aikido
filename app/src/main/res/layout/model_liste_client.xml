<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:weightSum="220"
    >
    <LinearLayout
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="110"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="120">
        <TextView
            android:id="@+id/nom_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="Nom "
            android:textSize="21dp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/prenom_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="PrÃ©nom"
            android:textSize="21dp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/email_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32"
            android:text="Email"
           android:fontFamily="casual"
            android:textSize="18dp"
            android:textStyle="bold"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="110"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="120">

        <TextView
            android:id="@+id/tele_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="casual"
            android:text="54192558"
            android:textSize="20dp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <TextView
            android:id="@+id/date_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:fontFamily="casual"
            android:text="12:30"
            android:textSize="17dp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <TextView
            android:id="@+id/frais_cli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:fontFamily="casual"
            android:text="Etudiant"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>