<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:weightSum="200">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="120">
        <TextView
            android:id="@+id/nom_salle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="Nom Salle "
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/adress_salle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="Adresse Salle"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/tel_salle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="54192558"
            android:fontFamily="casual"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="120">

        <TextView
            android:id="@+id/num_act"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="casual"
            android:text="15"
            android:textSize="30dp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7" />
        <TextView
            android:id="@+id/email_salle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:fontFamily="casual"
            android:text="Email"
            android:textSize="30dp"
            android:textStyle="bold" />


        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <TextView
            android:id="@+id/num_coach"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:fontFamily="casual"
            android:text="20"
            android:textSize="30dp"
            android:textStyle="bold" />



    </LinearLayout>

</LinearLayout>